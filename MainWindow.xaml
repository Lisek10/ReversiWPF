<Window x:Class="Reversi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reversi" Height="550" Width="750">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Gra">
                <MenuItem Header="Nowa gra (1 Gracz - Zaczynasz Ty)" Click="NowaGra_1Gracz_Ja_Click"/>
                <MenuItem Header="Nowa gra (1 Gracz - Zaczyna AI)" Click="NowaGra_1Gracz_AI_Click"/>
                <MenuItem Header="Nowa gra (2 Graczy)" Click="NowaGra_2Graczy_Click"/>
                <Separator/>
                <MenuItem Header="Zamknij" Click="Zamknij_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <UniformGrid x:Name="planszaGrid" Columns="8" Rows="8" Width="400" Height="400" VerticalAlignment="Top"/>
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock FontSize="18" FontWeight="Bold" Text="Wyniki:"/>
                <TextBlock x:Name="statusGracza" Text="Kolej: Gracz 1 (Zielony)" Margin="0,10"/>
                <TextBlock x:Name="wynikZielony" Text="Zielony: 2" Foreground="Green"/>
                <TextBlock x:Name="wynikBrazowy" Text="BrÄ…zowy: 2" Foreground="Sienna"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>